*
  margin 0
  padding 0

body.index
  color #666
  font-family 'Lora', serif

  section.home
    background-image url(../img/chicago.jpg)
    background-size 100%
    background-repeat no-repeat
    background-attachment fixed

    font-family 'Oxygen', sans-serif
    color #e9e9e9
    text-align center
    padding-top 250px
    padding-bottom 25px

    h1
      font-size 48px
      text-shadow 0px 0px 4px #333
      margin-top 10px

    .hero
      margin 0 auto

      img
        border 4px solid #e9e9e9

    .hero, .hero img
      width 100px
      height 100px
      border-radius 100%

    nav ul li
      display inline
      font-size 20px
      text-shadow 0px 0px 4px #333

      a
        text-decoration none
        color #e9e9e9

      &:not(:last-child):after
        content "•"
        margin-left 1em
        margin-right 1em

  div.main-content
    margin 0
    padding-top 50px
    padding-bottom 50px
    background white

    .hfeed
      max-width 760px
      margin 0 auto

      article
        line-height 1.5em
        font-size 1.2em
        letter-spacing .07em

        h2, h3
          font-size 30px
          font-family 'Oxygen', sans-serif
          margin-bottom 15px

          a
            text-decoration none
            color #111

        h3
          font-size 25px

        p
          margin-bottom 15px

        section
          margin-bottom 35px



body.post
  color #666
  font-family 'Lora', serif

  section.home
    position fixed
    width 100%

    border-bottom 1px solid #e9e9e9

    background-color white
    background-image url(../img/chicago.jpg)
    background-size 100%
    background-repeat no-repeat
    background-attachment fixed

    font-family 'Oxygen', sans-serif
    color #e9e9e9
    padding-top 10px
    padding-bottom 10px

    div
      max-width 760px
      margin 0 auto

      img
        border 4px solid #e9e9e9
        width 50px
        height 50px
        border-radius 100%
        vertical-align middle

      nav
        margin-left 20px
        position relative
        top 5px

      nav, nav ul
        display inline

      nav ul li
        display inline
        font-size 20px
        text-shadow 0px 0px 4px #333

        a
          text-decoration none
          color #e9e9e9

        &:not(:last-child):after
          content "•"
          margin-left 1em
          margin-right 1em

  div.main-content
    margin 0
    padding-top 125px
    padding-bottom 50px
    background white

    .hfeed
      max-width 760px
      margin 0 auto

      article
        line-height 1.5em
        font-size 1.2em
        letter-spacing .07em

        a
          color #333

        h2, h3
          font-size 30px
          font-family 'Oxygen', sans-serif
          margin-bottom 15px

          a
            text-decoration none
